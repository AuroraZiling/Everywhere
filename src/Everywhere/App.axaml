<Application
    x:Class="Everywhere.App" xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:suki="https://github.com/kikipoulet/SukiUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Everywhere/Assets/Resources.axaml"/>
                <!-- <ResourceInclude Source="avares://Everywhere/I18N/Key.axaml"/> -->
                <ResourceInclude Source="avares://Everywhere/I18N/zh-CN.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <suki:SukiTheme ThemeColor="Blue"/>
        <StyleInclude Source="avares://IconPacks.Avalonia.Material/Material.axaml"/>

        <StyleInclude Source="avares://Everywhere/Assets/Styles.axaml"/>
        <StyleInclude Source="avares://Everywhere/Views/Controls/DynamicKeyMenuItem.axaml"/>
        <StyleInclude Source="avares://Everywhere/Views/Controls/AssistantInputBox.axaml"/>
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon
                Clicked="HandleOpenMainWindowMenuItemClicked"
                Icon="avares://Everywhere/Assets/Everywhere.png" ToolTipText="Everywhere">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem
                            Click="HandleOpenMainWindowMenuItemClicked"
                            Header="{DynamicResource Application_TrayIcon_Menu_OpenMainWindow}"/>
                        <NativeMenuItem
                            Click="HandleOpenDebugWindowMenuItemClicked"
                            Header="{DynamicResource Application_TrayIcon_Menu_OpenDebugWindow}"/>
                        <NativeMenuItemSeparator/>
                        <NativeMenuItem
                            Click="HandleExitMenuItemClicked"
                            Header="{DynamicResource Application_TrayIcon_Menu_Exit}"/>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>